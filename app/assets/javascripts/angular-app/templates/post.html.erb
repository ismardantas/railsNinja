<md-dialog aria-label="post Task">

	<md-content class="sticky-container">
		<div class="dialog-content">
			<form name="userForm">
				<md-input-container flex>
					<label>Task title</label>
					<input type="text" ng-model="task.title" placeholder="Placeholder text" required>
				</md-input-container>
				<md-input-container flex>
					<label>Task Description</label>
					<textarea ng-model="task.description" placeholder="Placeholder text" md-maxlength="150" required></textarea>
				</md-input-container>

				<md-input-container flex>
					<label>Total</label>
					<input type="number" ng-model="task.total" placeholder="Placeholder text" required>
				</md-input-container>
			</form>
		</div>
	</md-content>
	
	<div class="md-actions" layout="row">
		<md-button ng-click="answer(task)" class="md-primary">
			Post
		</md-button>
	</div>

</md-dialog>