<md-dialog aria-label="register User" class="md-dialog">
	<md-content class="sticky-container">

		<div class="dialog-content">
			<form name="userForm">
				<md-input-container flex>
					<md-icon md-svg-icon="assets/svg/md-mail.svg" class="name"></md-icon>
					<input 	type="email"
							ng-model="user.email"
							placeholder="Enter email"
							required>
				</md-input-container>

				<md-input-container flex>
					<md-icon md-svg-icon="assets/svg/md-lock.svg" class="name"></md-icon>
					<input 	type="password"
							ng-model="user.password"
							placeholder="Enter pass"
							required>
				</md-input-container>

				<md-input-container flex>
					<md-icon md-svg-icon="assets/svg/md-lock.svg" class="name"></md-icon>
					<input 	type="password"
							ng-model="user.password_confirmation"
							placeholder="Enter pass"
							required>
				</md-input-container>
			</form>
		</div>
	</md-content>
	
	<div class="md-actions" layout="row">
		<md-button class="md-raised md-primary" ng-click="answer(user)">
			Register
		</md-button>
	</div>
</md-dialog>